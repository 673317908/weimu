
/* 模块标题样式 */
.common-subtitle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  padding: 0 40rpx;
  background: #fff;
}

.common-subtitle-left {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.common-subtitle-right {
  font-size: 26rpx;
  font-weight: 400;
  color: #959595;
  margin-right: 6rpx;
}

.swiper-box {
  position: relative;
  padding: 40rpx 0;
}

.swiper {
  height: 180rpx;
}

.swiper-item {
  padding: 0 40rpx;
  box-sizing: border-box;
  display: grid;
  display: -ms-grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
}

.dot-box {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
}

.dot {
  width: 16rpx;
  height: 6rpx;
  margin: 0 6rpx;
  background: #eee;
  transition: all 0.5s;
}

.dot.active {
  width: 32rpx;
  background: #2f80ed;
}

/* 精选商品 */
.selected-nav-list {
  display: flex;
  padding: 0 40rpx 40rpx;
  background: #fff;
}

.selected-nav-item {
  margin-right: 16rpx;
  text-align: center;
}

.selected-nav-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f5f7f7;
  display: inline-block;
  vertical-align: top;
  margin-bottom: 10rpx;
}

.selected-nav-item text {
  line-height: 26rpx;
  font-size: 26rpx;
  color: #333;
}