/* 模块标题样式 */
.common-subtitle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  background: #fff;
}

.common-subtitle-left {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.common-subtitle-right {
  font-size: 26rpx;
  font-weight: 400;
  color: #959595;
  margin-right: 6rpx;
}


/* 精选商品 */

.selected-nav {
  border-bottom: 16rpx solid #f5f7f7;
  background: #fff;
  padding-bottom: 40rpx;
}

.selected-nav-list {
  display: flex;
}

.selected-nav-item {
  margin-right: 16rpx;
  /* text-align: center; */
}

.selected-nav-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 6rpx;
  background: #f5f7f7;
}

.selected-nav-item .info .title {
  width: 200rpx;
  font-size: 13px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.selected-nav-item .info .price {
  font-size: 12px;
  color: #999; 
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.selected-nav-item .info .price .sale-price {
  font-size: 18px;
  font-weight: 500;
  color: #fe645a; 
  width: 200rpx;
}

.selected-nav-item .info .price .unit {
  color: #fe645a;
}

.selected-nav-item .info .price .cost-price {
  text-decoration: line-through;
  margin-left: 4rpx;
}