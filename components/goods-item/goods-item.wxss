
.goods-item {
  border-radius: 16rpx;
  background: #FFF;
  overflow: hidden;
}

.img {
  width: 100%;
  height: 360rpx;
  display: block;
}

.info {
  padding: 20rpx;
}

.title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
  font-size: 14px;
  color: #333;
  height: 88rpx
}

.price {
  font-size: 16px;
  font-weight: 500;
  color: #fe645a;
}