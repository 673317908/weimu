.cate {
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}

/* 左边分类菜单 */
.menu {
  width: 200rpx;
  font-size: 28rpx;
  background: #F5F7F7;
  position: fixed;
  height: 100%;
}

.menu-content {
  width: 200rpx;
  position: absolute;
  height: 100%;
  overflow: auto;
}

.menu-item {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 24rpx;
  position: relative;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.active {
  color: #2f80ed;
  font-weight: 500;
  background: #FFF;
}

/* 右边显示的分类列表 */
.list {
  flex: 1;
  height: 100%;
  overflow: auto;
  background: #FFF;
  margin-left: 200rpx;
}

.list-content {
  padding: 40rpx 40rpx 0;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-column-gap: 20rpx;
  grid-row-gap: 20rpx;
}

.list-item {
  /* background: #fff;
  border-radius: 10rpx;
  box-shadow: 2px 2px 10px #eee; */
  text-align: center;
}

.img {
  width: 100%;
  height: 140rpx;
  display: block;
}

.cate-name {
  font-size: 14px;
  color: #333;
  display: block;
  padding: 16rpx 4rpx;
}