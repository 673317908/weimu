/* 左图模式 */
.left-img {
  background: #f5f7f7;
}

.left-img-ad {
  margin-bottom: 16rpx;
}

.left-img-item {
  position: relative;
  padding: 40rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 16rpx;
}

.left-img-cover {
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  width: 240rpx;
  height: 180rpx;
  background: #f5f7f7;
}

.left-img-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 180rpx;
  margin-left: 270rpx;
}

.left-img-title {
  margin-bottom: 20rpx;
}

.left-img-title .txt {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  line-height: 1.4;
  font-weight: 500;
  color: #333;
}

.left-img-des {
  margin-right: 40rpx;
  color: #959595;
  font-size: 24rpx;
}

.left-img-des .txt:not(:last-child) {
  margin-right: 32rpx;
}


