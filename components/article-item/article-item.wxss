}


/* 大图列表 */
.big-img {
  background: #f5f7f7;
}

.big-img-ad {
  margin-bottom: 16rpx;
}

.big-img-item {
  position: relative;
  overflow: hidden;
  background: #fff;
  padding: 40rpx;
  margin-bottom: 16rpx;
}

.big-img-cover {
  display: block;
