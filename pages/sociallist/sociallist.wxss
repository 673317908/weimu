@import "../../templates/loading/threepoint.wxss";
@import "../../templates/socials/socials.wxss";

.list-header {
  padding: 50rpx 0;
  text-align: left;
  font-weight: normal;
  font-size: 40rpx;
  line-height: 40rpx;
  color: #21759b;
  border-bottom: 2rpx solid #ededed;
  margin-bottom: 48rpx;
}

/*topic list*/

.topic-list-item {
  position: relative;
  overflow: hidden;
  background:  rgba(0, 0, 0, 0.2)
}

.topic-list-item  image.cover {
  display: block;
  width: 100%;
  height: 240rpx;
  filter: brightness(88%);
}

.topic-item-content {
  position: absolute;
  z-index: 2;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  vertical-align: middle;
  width: 90%;
}

.topic-content-brief {
  font-size: 30rpx;
  font-weight: 500;
  line-height: 1.4;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 16rpx;
}

.topic-content-num {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #fff;
  margin-bottom: 24rpx;
}

.topic-content-btn {
  font-size: 12px;
  color: #fff;
}

.topic-content-btn .btn-subscribe {
  display: block;
  width: 140rpx;
  height: 52rpx;
  font-size: 26rpx;
  line-height: 52rpx;
  font-weight: 500;
  color: #fff;
  border: 4rpx #fff solid;
  border-radius: 30rpx;
  margin: 0 auto 20rpx;
}

.addpost {
  width: 110rpx;
  height: 110rpx;
  padding-top: 15rpx;
  position: fixed;
  bottom: 2%;
  right: 16rpx;
}

.sub-img {
  display: flex;
  height: 72rpx;
  width: 670rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #3963bc;
  background-color: #dfedff;
  overflow: hidden;
  box-shadow: 0 2px 5px 0 rgba(218, 224, 233, 0.4);
  border-radius:  8px 8px;
  margin: 20rpx 40rpx;

}

.sub-img > image {
  width: 98rpx;
  height: 49rpx;
  display: block;
}


.like-portrait image {
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

/* 自定义banner */
.custom-banner {
  padding: 40rpx;
  border: 1px solid #EEE;
  border-bottom: 16rpx solid #f5f7f7;
}

.custom-banner image {
  display: block;
  width: 100%;
  height: 214rpx;
  position: relative;
}

.custom-banner image::before {
  content: '广告';
  position: absolute;
  top: 10rpx;
  left: 40rpx;
  background: rgba(0, 0, 0, 0.4);
  font-size: 10px;
  color: #fff;
  line-height: 32rpx;
  height: 32rpx;
  padding: 0 16rpx;
  border-radius: 16rpx;
}

