  background: #2f80ed;
}

.official-account {
  padding: 40rpx 40rpx 0;
  font-size: 28rpx;
  color: #666;
}

.official-account official-account {
  border: none;
}

/* 自定义banner */
.custom-banner {
  border-bottom: 16rpx solid #f5f7f7;
}

.custom-banner image {
  display: block;
  width: 100%;
  height: 214rpx;
  position: relative;
}

.custom-banner image::before {
  content: '广告';
  position: absolute;
  top: 10rpx;
  left: 40rpx;
  background: rgba(0, 0, 0, 0.4);
