  color: #fff;
  line-height: 1.2;
  background: #2f80ed;
  padding: 24rpx 24rpx;
  border-radius: 12rpx;
  position: fixed;
  top: 20rpx;
  right: 24rpx;
  z-index: 999;
  box-shadow: 0 16rpx 30rpx -12rpx rgba(88, 88, 88, 0.2);
}

.addMyMiniapp>view {
