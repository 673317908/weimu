/* 公告 */
.notice {
  display: flex;
  height: 72rpx;
  line-height: 72rpx;
  overflow: hidden;
  padding: 10rpx 40rpx;
  border-bottom: 16rpx solid #f5f7f7;
  font-size: 28rpx;
  color: #666;
}

.notice > .iconfont {
  font-size: 28rpx;
  margin-right: 6rpx;
  color: #999;
}

.notice-swiper {
  display: flex;
  margin-right: 15rpx;
  flex: 1;
  height: 72rpx;
  overflow: hidden;
  font-family: 'UKIJ Ekran';
  DIRECTION: rtl;
}

.notice-swiper-item {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 订阅 */

.subscribe {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  color: #999;
  background: #f5f7f7;
  padding: 30rpx 40rpx;
}

.subscribe > view {
