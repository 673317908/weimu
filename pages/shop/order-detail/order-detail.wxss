page {
  background: #f5f7f7;
}

.swiper-box {
  height: 600rpx;
  width: 100%;
}

.swiper-item image {
  width: 100%;
  height: 600rpx;
}

/* 商品信息 */
.info {
  padding: 20rpx 40rpx 40rpx;
  background: #FFF;
}

.price {
  font-size: 12px;
  color: #999; 
}

.price .sale-price {
  font-size: 28px;
  font-weight: 500;
  color: #fe645a; 
  width: 200rpx;
}

.price .unit {
  color: #fe645a;
}

.price .cost-price {
  text-decoration: line-through;
  margin-left: 10rpx;
}

/* 商品详情信息 */
.goods-detail {
  margin-top: 20rpx;
  background: #FFF;
  padding: 20rpx 40rpx;
}

.goods-detail .item {
  display: flex;
  font-size: 14px;
  color: #333;
  line-height: 1.4;
  padding: 40rpx 0;
}

.goods-detail .item:not(:last-child) {
  border-bottom: 1px solid #eee;
}

.goods-detail .item .label {
  width: 160rpx;
  color: #999;
}

/* 发货表单 */
.form {
  margin-top: 20rpx;
  padding-bottom: 400rpx;
}

.btn-box {
  padding: 0 40rpx;
  text-align: center;
  margin-top: 100rpx;
}