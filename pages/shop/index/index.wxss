page {
  background: #f5f7f7;
}

.swiper-box {
  height: 320rpx;
  width: 100%;
}

.swiper-item image {
  width: 100%;
  height: 320rpx;
}

/* 模块标题样式 */
.common-subtitle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  padding: 0 20rpx;
  background: #fff;
}

.common-subtitle-left {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.common-subtitle-right {
  font-size: 26rpx;
  font-weight: 400;
  color: #959595;
  margin-right: 6rpx;
}


/* 精选商品 */

.selected-nav {
  border-bottom: 16rpx solid #f5f7f7;
  background: #fff;
}

.selected-nav-list {
  display: flex;
  padding: 0 20rpx 40rpx;
}

.selected-nav-item {
  margin-right: 16rpx;
  /* text-align: center; */
}

.selected-nav-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 6rpx;
  background: #f5f7f7;
}

.selected-nav-item .info .title {
  width: 200rpx;
  font-size: 13px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.selected-nav-item .info .price {
  font-size: 12px;
  color: #999; 
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.selected-nav-item .info .price .sale-price {
  font-size: 18px;
  font-weight: 500;
  color: #fe645a; 
  width: 200rpx;
}

.selected-nav-item .info .price .unit {
  color: #fe645a;
}

.selected-nav-item .info .price .cost-price {
  text-decoration: line-through;
  margin-left: 4rpx;
}

.selected-nav-coupon {
  border-bottom: none;
}

.selected-nav-coupon .selected-nav-list .coupon-item {
  margin-right: 20rpx;
}
 
.goods-list {
  padding: 20rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-row-gap: 16rpx;
  grid-column-gap:16rpx;
}

/* tab样式 */
.vant-tab-nav {
  width: 90%;
  margin: 0 auto;
}

.tab-content {
  width: 100%;
  height: calc(100vh - 88rpx);
}

/* 悬浮按钮 */
.float-box {
  position: fixed;
  bottom: 2%;
  left: 20rpx;
  z-index: 999;
}

.float-box .btn {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FFF;
  border-radius: 50%;
  margin-bottom: 40rpx;
  box-shadow: 2rpx 4rpx 10rpx rgba(0, 0, 0, .1);
  overflow: hidden;
}

.float-box .btn button {
  background: transparent;
}

.float-box .btn button::after {
  border: none;
}