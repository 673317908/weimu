page {
  background: #f5f7f7;
}

.cateBox {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}

/* 左边分类菜单 */
.cateLeft {
  width: 200rpx;
  font-size: 28rpx;
  background: #fff;
  position: fixed;
  height: 100%;
}

.cateLeftBox {
  width: 200rpx;
  position: absolute;
  height: 100%;
  overflow: auto;
}

.cateLeftBox>view {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 24rpx;
  position: relative;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.active {
  color: #2f80ed;
  font-weight: 500;
  background: #f5f7f7;
}

.active::before {
  content: "";
  display: block;
  width: 3px;
  height: 30rpx;
  background: #2f80ed;
  position: absolute;
  top: 35rpx;
  left: 0;
}

/* 右边显示的分类列表 */
.cateRight-box {
  flex: 1;
  height: 100%;
  overflow: auto;
  background: #f5f7f7;
  margin-left: 200rpx;
}

.cateRight {
  padding: 40rpx 40rpx 0;
}

.topic-common-list {
  padding: 40rpx 40rpx 0;
}

.list-item {
  position: relative;
  overflow: hidden;
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 2px 2px 10px #eee;
}

.list-item  image.cover {
  width: 100%;
  height: 160rpx;
  display: block;
}

.content-title {
  padding: 20rpx 30rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content-title text {
  font-size: 15px;
  line-height: 1;
  font-weight: 500;
  color: #333;
}

.content-title .count {
  font-size: 12px;
  font-weight: 400;
  color: #999;
}

.pay-tip::after {
  display: inline-block;
  content: '付费';
  font-size: 10px;
  line-height: 15px;
  color: #fff;
  background: #2f80ed;
  border-radius: 4rpx;
  height: 15px;
  margin-left: 8rpx;
  padding: 0 8rpx;
  vertical-align: top;
}

.content-brief {
  width: 70%;
  padding: 4rpx 0 10rpx 30rpx;
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
}

.topic-name {
  width: 55%;
}

.content-subscribe {
  padding: 0 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  color: #959595;
}

.content-subscribe > image {
  width: 98rpx;
  height: 52rpx;
  display: block;
}

/* 自定义banner */
.custom-banner image {
  display: block;
  width: 100%;
  height: 180rpx;
  position: relative;
}

.custom-banner image::before {
  content: '广告';
  position: absolute;
  top: 10rpx;
  left: 40rpx;
  background: rgba(0, 0, 0, 0.4);
  font-size: 10px;
  color: #fff;
  line-height: 32rpx;
  height: 32rpx;
  padding: 0 16rpx;
  border-radius: 16rpx;
}