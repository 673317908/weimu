

.list-header {
  padding: 50rpx 0;
  text-align: left;
  font-weight: normal;
  font-size: 40rpx;
  line-height: 40rpx;
  color: #21759b;
  border-bottom: 2rpx solid #ededed;
  margin-bottom: 48rpx;
}

/* 当列表为分类时 */

.topic-list-item {
  position: relative;
  overflow: hidden;
  background: #f4f6f9;
}

.topic-list-item  image.cover {
  display: block;
  width: 100%;
  height: 240rpx;
  filter: brightness(80%);
}

.topic-item-content {
  position: absolute;
  z-index: 2;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  vertical-align: middle;
  width: 90%;
}

.topic-content-brief {
  font-size: 15px;
  font-weight: 500;
  line-height: 1.4;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 16rpx;
}

.topic-content-num {
  font-size: 12px;
  line-height: 12px;
  color: #fff;
  margin-bottom: 24rpx;
}

.topic-content-btn {
  font-size: 12px;
  color: #fff;
}

.topic-content-btn .btn-subscribe {
  display: block;
  width: 240rpx;
  height: 52rpx;
  font-size: 26rpx;
  line-height: 52rpx;
  font-weight: 500;
  color: #fff;
  border: 4rpx #fff solid;
  border-radius: 30rpx;
  margin: 0 auto 20rpx;
}

.searchKey {
  color: #121b23;
}

.topic-img > image {
  width: 98rpx;
  height: 49rpx;
  display: block;
}

/* 置顶文章 */
.sticky-post {
  position: relative;
  padding: 40rpx;
 /** min-height: 180rpx;**/
  overflow: hidden;
  background-color: #fff;
  border-bottom: 16rpx solid #f5f7f7;
}

.sticky-post > image.cover {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  width: 240rpx;
  height: 180rpx;
}

.left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /**height: 180rpx;**/
}

.title {
  width: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: 500;
  color: #333;
}

.title > text::before {
  content: "置顶";
  font-size: 20rpx;
  height: 30rpx;
  color: #fe645a;
  border: 1rpx solid #fe645a;
  border-radius: 0 8rpx;
  padding: 0 6rpx;
  margin-right: 6rpx;
  line-height: 28rpx;
  vertical-align: middle;
  display: inline-block;
}

.description {
  width: 100%;
}

.description text {
  color: #959595;
  font-size: 24rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 购买 */
.tab-box {
  height: 140rpx;
  width: 100%;
  padding-bottom: env(safe-area-inset-bottom);
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  font-weight: 500;
  line-height: 1;
  text-align: center;
  background: #FFF;
  box-shadow: 0 0 6px rgba(30, 20, 20, 0.1);
}

.tab-box .btn-integral {
  flex: 1;
  height: 88rpx;
  border-radius: 50rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
  margin: 0 40rpx;
  color: #999;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tab-box .btn-money {
  flex: 1;
  height: 88rpx;
  border-radius: 50rpx;
  background: #2f80ed;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 0 40rpx;
}

.btn-integral > view,
.btn-money > view {
  font-size: 10px;
  font-weight: 400;
  margin-top: 6rpx;
}


/* 自定义banner */
.custom-banner {
  padding: 40rpx;
  border: 1px solid #EEE;
  border-bottom: 16rpx solid #f5f7f7;
}

.custom-banner image {
  display: block;
  width: 100%;
  height: 214rpx;
  position: relative;
}

.custom-banner image::before {
  content: '广告';
  position: absolute;
  top: 10rpx;
  left: 40rpx;
  background: rgba(0, 0, 0, 0.4);
  font-size: 10px;
  color: #fff;
  line-height: 32rpx;
  height: 32rpx;
  padding: 0 16rpx;
  border-radius: 16rpx;
}