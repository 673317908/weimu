@import "../../templates/loading/threepoint.wxss";


/* 选项卡样式 */
.top-bar {
  position: relative;
  z-index: 2;
  height: 88rpx;
  background: #fff;
  color: #959595;
  width: 100%;
  box-shadow: 0px 4px 8px #f5f7f7;
}

.top-bar-item {
  display: inline-block;
  width: 50%;
  text-align: center;
  line-height: 88rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.top-bar-item-Selected {
  color: #2f80ed;
  font-weight: 600;
  position: relative;
}

.top-bar-item-Selected:after {
  display: block;
  height: 4rpx;
  width: 36rpx;
  content: '';
  background: #2f80ed;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, 0);
}

/* 列表 */
.list-box {
  margin-bottom: 24rpx;
  background: #f5f7f7;
}

.list-item {
  position: relative;
  padding: 40rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 16rpx;
}

.list-item > image {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  width: 180rpx;
  height: 200rpx;
}

.content-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 200rpx;
}

.content-title {
  margin-bottom: 10rpx;
  width: 70%;
}

.content-title > text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  line-height: 1.4;
  font-weight: 500;
  color: #333;
}

.content-popularity text {
  color: #959595;
  font-size: 24rpx;
}

.content-popularity text:not(:last-child) {
  margin-right: 32rpx;
}

/* 订阅消息 */
.btn-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 68%;
}

.btn-box .tips {
  font-size: 12px;
  color: #999;
}

.btn-box .btn {
  font-size: 12px;
  color: #666;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 40rpx;
  border-radius: 6rpx;
  border: 1px solid #eee;
}
