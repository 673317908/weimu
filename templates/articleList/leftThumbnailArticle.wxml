<template name="leftThumbnailArticle">
	<view class="left-common-list">
		<block wx:key="id" wx:for="{{articlesList}}">
			<view class="list-item-ad" index="{{index}}" wx:if="{{index%item.listAdEvery ==0  && index!=0  && item.listAd =='1' && item.listAdId !='' && listAdsuccess}}">

				<block wx:if="{{(index/item.listAdEvery)%2==0}}">
					<ad unit-id="{{item.videoAdId}}" ad-type="video" ad-theme="white" binderror="adbinderror"></ad>
				</block>
				<block wx:else>
					<ad unit-id="{{item.listAdId}}" ad-intervals="30" binderror="adbinderror"></ad>
				</block>


			</view>
			<view class="left-list-item" index="{{index}}" data-posttype="{{item.postType}}" id="{{item.id}}" data-weixinmptype="{{item.raw_weixinmp_type}}" data-weixinmpurl="{{item.raw_weixinmp_url}}" bindtap="redictDetail">
				<image src="{{item.post_medium_image}}" mode="aspectFill" class="cover"></image>

				<view class="left-content-right">
					<view class="left-content-title">
						<text>{{item.title.rendered}}</text>
					</view>

					<view class='left-content-popularity'>
						<text>كۆرۈلىشى {{item.pageviews}}</text>
						<text>ئىنكاس {{item.total_comments}}</text>
						<text>يۈرەكلەش {{item.like_count}}</text>
					</view>
				</view>
			</view>
		</block>
	</view>
</template>