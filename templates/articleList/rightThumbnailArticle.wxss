 @import "/images/uyghurfont.wxss";
/*common list  for  index  list page */

.right-common-list {
  margin-bottom: 24rpx;
  background: #f5f7f7;
}

.right-list-item {
  position: relative;
  padding: 40rpx;
  min-height: 180rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 16rpx;
}

.right-list-item>image.cover {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  width: 240rpx;
  height: 180rpx;
}

.right-content-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 180rpx;
  direction: ltr;
}

.right-content-title {
  margin-bottom: 20rpx;
  width: 60%;
}

.right-content-title text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  line-height: 1.4;
  font-weight: 500;
  color: #333;
}

.right-content-popularity {
  width: 60%;
}

.right-content-popularity text {
  color: #959595;
  font-size: 24rpx;
}

.right-content-popularity text:not(:last-child) {
  margin-left: 32rpx;
}

/* 广告组件 */
.list-item-ad {
  margin-bottom: 16rpx;
}
